{
  "private": false,
  "name": "@open-actions-rs/core",
  "version": "0.1.8",
  "author": "open-actions-rs",
  "license": "MIT",
  "description": "Core functionality for the @open-actions-rs repos",
  "main": "dist/core.js",
  "typings": "dist/core.d.ts",
  "files": [
    "dist/**/*.js",
    "dist/**/*.js.map",
    "dist/**/*.d.ts"
  ],
  "scripts": {
    "build": "tsc -p .",
    "watch": "tsc -p . -w",
    "lint": "eslint src --ext=ts,tsx",
    "lint:fix": "npm run lint -- --fix",
    "format": "prettier --write \"src/**/*.ts\"",
    "clean": "rm -rf ./dist/* && rm tsconfig.tsbuildinfo && npm run build",
    "test": "jest --watchAll",
    "test:ci": "jest",
    "deps:ci": "depcruise --output-type err src",
    "deps:graph": "depcruise --output-type dot src | dot -T svg > dependency-graph.svg",
    "deps:report": "depcruise --output-type err-html --output-to dependency-report.html src"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/open-actions-rs/core.git"
  },
  "bugs": {
    "url": "https://github.com/open-actions-rs/core/issues"
  },
  "devDependencies": {
    "@actions/cache": "^3.1.2",
    "@actions/core": "^1.10.0",
    "@actions/exec": "^1.1.1",
    "@actions/github": "^5.1.1",
    "@actions/io": "^1.1.2",
    "@actions/tool-cache": "^2.0.1",
    "@octokit/graphql": "^5.0.4",
    "@octokit/rest": "^19.0.5",
    "@types/jest": "^29.2.5",
    "@types/node": "^18.11.18",
    "@types/semver": "^7.3.13",
    "@typescript-eslint/eslint-plugin": "^5.48.1",
    "@typescript-eslint/parser": "^5.48.1",
    "dependency-cruiser": "^12.5.0",
    "eslint": "^8.32.0",
    "eslint-config-prettier": "^8.6.0",
    "eslint-import-resolver-typescript": "^3.5.3",
    "eslint-plugin-import": "^2.27.4",
    "eslint-plugin-prettier": "^4.2.1",
    "husky": "^8.0.3",
    "jest": "^29.3.1",
    "jest-junit": "^15.0.0",
    "lint-staged": "^13.1.0",
    "prettier": "^2.8.3",
    "semver": "^7.3.8",
    "ts-jest": "^29.0.5",
    "typescript": "^4.9.4"
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "npm run test:lint:fix",
      "depcruise --validate -- "
    ]
  },
  "homepage": "https://github.com/open-actions-rs/core#readme"
}
